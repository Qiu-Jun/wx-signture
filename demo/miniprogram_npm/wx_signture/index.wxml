<view class="signture-wrap">
    <canvas
        class="canvas"
        type="{{ canvasType }}"
        id="signture"
        canvas-id="signture"
        catchtouchstart="onTouchStart" 
        catchtouchmove="onTouchMove"
    ></canvas>

    <view class="btns" catchtap="onBtn">
        <view
            class="btn reset"
            data-type="reset"
            style="background-color: {{ resetBg }};color: {{ resetTextColor }};"
        >{{ resetText }}</view>
        <view
            class="btn confirm"
            data-type='confirm'
            style="background-color: {{ confirmBg }};color: {{ confirmTextColor }};"
        >{{ confirmText }}</view>
    </view>
</view>