.signture-wrap {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
}
.signture-wrap .canvas {
    width: 100%;
    height: 100%;
    background-color: #ccc;
}

.signture-wrap .btns {
    position: absolute;
    left: 50%;
    bottom: 20rpx;
    transform: translateX(-50%);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10;
}

.signture-wrap .btns .btn{
    display: inline-block;
    width: 320rpx;
    height: 72rpx;
    line-height: 72rpx;
    margin-left: 20rpx;
    text-align: center;
}

.signture-wrap .btns .btn:first-child {
    margin-left: 0;
}

.signture-wrap .btns .reset{
    background-color: #fff;
}

.signture-wrap .btns .confirm{
    color: #fff;
    background-color: #f34250;
}